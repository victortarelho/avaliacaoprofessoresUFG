<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="AvaliacaoProfessoresPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>com.ufg.avaliacaoprofessores.bean.Docente</class>
    <class>com.ufg.avaliacaoprofessores.bean.Atividade</class>
    <class>com.ufg.avaliacaoprofessores.bean.AvaliacaoDocente</class>
    <class>com.ufg.avaliacaoprofessores.bean.Avaliacao</class>
    <class>com.ufg.avaliacaoprofessores.bean.ItemAvaliacao</class>
    <class>com.ufg.avaliacaoprofessores.bean.TipoAtividade</class>
    <properties>
      <property name="hibernate.connection.username" value="postgres"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.connection.password" value="123456"/>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/avaliacaoProfessores"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
